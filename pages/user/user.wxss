@import '../common/css/weui.wxss';

.user-container {
  min-height: 1300rpx;
  background-color: #f8f8f8;
  font-size: 32rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #e8e8e8;
}

.user-info>image {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
}

.user-info text {
  margin-top: 24rpx;
}

.bind {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.bind image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  transform: rotate(-90deg);
}

.options {
  margin-bottom: 30rpx;
  background-color: #fff;
}

.option {
  padding: 20rpx 30rpx;
}

.option form {
  flex: 1;
}

.option:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.option .weui-cell__bd {
  display: flex;
  align-items: center;
}

.option image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

button.form_button {
  position: static;
  display: flex;
  flex: 1;
  padding: 0;
  margin: 0;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  background-color: transparent;
  font-size: 0rpx;
  color: transparent;
  text-align: left;
}

button.form_button:after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}

.attention {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 30rpx 30rpx 0;
  background-color: #fff;
}

.attention, .options {
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}

.attention-item {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.attention-item:first-child {
  position: relative;
  padding-right: 28rpx;
}

