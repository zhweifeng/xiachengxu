.attention-item-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.attention-item-title text {
  font-size: 28rpx;
  color: #919191;
}

.attention-item-title image {
  width: 40rpx;
  height: 40rpx;
  transform: rotate(-90deg);
}

.attention-item-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}

.attention-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
}

.attention-item-content text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.attention-item-content image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 244rpx;
}

.no-data text {
  font-size: 24rpx;
  color: #919191;
}
