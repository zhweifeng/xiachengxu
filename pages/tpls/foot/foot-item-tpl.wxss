.item {
  display: flex;
  flex-direction: column;
  margin: 30rpx 30rpx 0;
  padding: 10rpx 30rpx 10rpx 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.item-product {
  display: flex;
  flex-direction: row;
}

.left-box {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  margin-right: 26rpx;
  border-radius: 8rpx;
}

.left-box image {
  width: 100%;
  height: auto;
  border-radius: 8rpx;
}

.right-box, .right-box-cart {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 25rpx;
}

.price-content text:first-child {
  font: 32rpx/normal PingFang-SC-Regular;
  color: #ff5757;
}

.price-content text:nth-child(2) {
  margin-left: 10rpx;
  font: 24rpx/normal PingFang-SC-Regular;
  color: #999;
  text-decoration: line-through;
}

.right-box text:first-child {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
}

.right-box .bookingCount {
  font-size: 28rpx;
}

.right-box .price {
  font-size: 40rpx;
  color: #e4393c;
}

.right-box-cart-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.right-box-cart-bottom>text {
  font: 24rpx/normal PingFang-SC-Regular;
  color: 666;
}

.order-btn {
  display: flex;
  flex: 0 0 20%;
  align-items: center;
  justify-content: center;
}

.order-btn .hasAppoint {
  color: #666;
  font-size: 28rpx;
}

.order-btn .appoint {
  display: inline-block;
  padding: 5rpx 20rpx;
  border: 1px solid #212121;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #212121;
}

.order-info-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ededed;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 40rpx;
}

.order-info text {
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #28292f;
}

.order-status {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-status text, .order-manage text {
  display: inline-block;
  min-width: 130rpx;
  height: 65rpx;
  padding: 0 20rpx;
  text-align: center;
  font: 24rpx/65rpx PingFang-SC-Regular;
  color: #fff;
  background-color: #212121;
  border-radius: 6rpx;
}

.order-manage text:first-child {
  margin-right: 20rpx;
  background-color: #fff;
  border: 2rpx solid #212121;
  color: #212121;
}

.order-manage>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/*控制台客户里的每一项的模板  */

.item-console {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background-color: #fff;
}

.item-console image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.item-console .customer-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

