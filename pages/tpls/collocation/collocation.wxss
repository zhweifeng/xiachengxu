.collocation-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx;
  border-bottom: 2rpx solid #eee;
}

.collocation-left image {
  width: 84rpx;
  height: 84rpx;
}

.collocation-right {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.collocation-right .store-name {
  font: 30rpx/normal PingFangSC-Semibold;
  color: #288dff;
}

.collocation-right .product-desc {
  text-align: justify;
  font: 30rpx/normal PingFang-SC-Regular;
  color: #333;
}

.products-imgs {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}

.product-image {
  /* flex: 0 0 32%; */
  width: 158rpx;
  height: 158rpx;
  overflow: hidden;
  margin: 10rpx 10rpx 0 0;
}

.product-img-single {
  flex: 1;
  height: 600rpx;
  overflow: hidden;
  margin-top: 12rpx;
}

.products-imgs image {
  width: 100%;
  height: auto;
}

.release-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 12rpx 0;
}

.release-info text {
  font: 28rpx/normal PingFang-SC-Regular;
  color: #919191;
}

.view-num {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.view-num image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.release-options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 494rpx;
}

.release-options text {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  width: 100rpx;
  border-radius: 8rpx;
  border: 2rpx solid #212121;
  font-size: 24rpx;
}

.release-options image {
  width: 60rpx;
  height: 60rpx;
}

.like {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.like image:last-child {
  position: absolute;
  opacity: 0;
  bottom: 0;
  left: 0;
}

.floatAnimate {
  animation: float-animate 1s ease-out;
}

@keyframes float-animate {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    bottom: 100rpx;
  }
}
