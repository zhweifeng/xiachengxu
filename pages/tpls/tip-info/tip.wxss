.tip-info {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 60%;
  height: 100rpx;
  line-height: 50rpx;
  padding: 20rpx 40rpx;
  background-color: rgba(0, 0, 0, 0.8);
  box-shadow: 0 0 40rpx 0 #212121;
  color: #f2f2f2;
  text-align: center;
  border-radius: 10rpx;
}
