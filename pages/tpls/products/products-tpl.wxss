.products-box, .products-box-index {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #fff;
}

.products-box {
  padding: 12rpx 12rpx 0 0;
}

.products-box-index {
  padding-top: 30rpx;
  background-color: #fff;
}

.product-wrapper {
  flex: 0 0 50%;
  background-color: #f0f0f0;
}

.product {
  position: relative;
  margin: 0 0 12rpx 12rpx;
  background-color: #fff;
}

.product-index {
  margin-bottom: 30rpx;
  box-shadow: 4rpx 4rpx 20rpx 0 rgba(0, 0, 0, 0.1);
}

.products-box-index .product-wrapper {
  background-color: #fff;
}

.img-wrap {
  background-color: #ececec;
  height: 576rpx;
  overflow: hidden;
}

.img-wrap image {
  width: 100%;
  height: 100%;
}

.product-rate {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 100rpx;
  height: 50rpx;
}

.product-rate image, .product-rate text {
  width: 100%;
  height: 100%;
}

.product-rate text {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 6rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #eb282e;
  font-weight: bold;
}

.products-item-bottom {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  margin: 0 16rpx;
  padding-bottom: 16rpx;
}

.products-item-bottom .collect-num {
  font-family: PingFang-SC-Medium;
  font-size: 26rpx;
  color: rgb(135, 135, 135);
}

.title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 20rpx;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  color: rgb(33, 33, 33);
  line-height: 40rpx;
  text-align: left;
}

.products-item-bottom .price {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.products-item-bottom .price>view:first-child {
  font: 36rpx/normal PingFang-Regular;
  color: #c90808;
}

.products-item-bottom .price .original {
  font-size: 20rpx;
  color: #919191;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.products-item-bottom .price>view:first-child text {
  color: #c90808;
  font-size: 24rpx;
}

.products-item-bottom image {
  width: 44rpx;
  height: 44rpx;
  transform: scale(1.2);
}

/* 门户页样式 */

.product-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 30rpx 10rpx;
  font: 30rpx/100% PingFang-SC-Regular;
  color: rgb(42, 42, 42);
}

.product-price {
  padding-bottom: 30rpx;
  font: 30rpx/100% PingFang-SC-Regular;
  color: rgb(201, 8, 8);
}
