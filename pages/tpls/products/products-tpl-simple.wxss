.product-simple-product {
  margin-bottom: 16rpx;
}

.product-simple-img-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100%;
}

.product-simple-img-list image {
  height: 100%;
  flex: 1;
  margin-right: 10rpx;
}

.product-simple-img-list image:last-child {
  margin-right: 0;
}

.product-simple-top {
  position: relative;
  width: 100%;
  height: 440rpx;
  overflow: hidden;
  background-color: #fff;
  border-bottom: 2rpx solid #f2f2f2;
}

.product-simple-top>image {
  width: 100%;
  height: auto;
}

.product-simple-rate {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  width: 120rpx;
  height: 60rpx;
}

.product-simple-rate image, .product-simple-rate text {
  width: 100%;
  height: 100%;
}

.product-simple-rate text {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 6rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #eb282e;
  font-weight: bold;
}

.product-img-num {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 100rpx;
  height: 50rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 24rpx;
}

.product-simple-bottom {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background-color: #fff;
}

.product-simple-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font: 32rpx/normal PingFang-SC-Regular;
  color: #000;
}

.product-simple-attr {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  flex: 1;
}

.product-simple-price, .product-simple-price-discount>view {
  font: 36rpx/normal PingFang-SC-Regular;
  color: #000;
}

.product-simple-price-discount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.product-simple-price-discount>view:last-child {
  font: 26rpx/normal PingFang-SC-Regular;
  color: #eb282e;
  text-decoration: line-through;
}

.product-simple-price>text, .product-simple-price-discount>view text {
  font: 26rpx/normal PingFang-SC-Medium;
  color: #8a8a8a;
}

.product-simple-collect {
  margin-top: 6rpx;
  font: 26rpx/normal PingFang-SC-Medium;
  color: #919191;
}
