.redpack-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 200rpx;
  padding: 30rpx 30rpx 30rpx 0;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #fa6b6f;
}

.redpack-card .card-amount {
  display: flex;
  flex: 0 0 25%;
  align-items: baseline;
  justify-content: center;
  height: 100%;
  line-height: 200rpx;
  border-right: 4rpx dashed #fff;
}

.card-amount text:last-child {
  font-size: 50rpx;
  color: #fff;
}

.redpack-card .card-amount .currency {
  font-size: 28rpx;
  color: #fff;
}

.redpack-card .card-des {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  height: 100%;
  margin-left: 30rpx;
}

.card-des text:first-child {
  font-size: 34rpx;
  color: #fff;
}

.card-des text:nth-child(2), .card-des text:last-child {
  font-size: 24rpx;
  color: #fff;
}

.card-status, .card-btn {
  display: flex;
  flex: 0 0 20%;
  align-items: center;
  height: 100%;
}

.card-status image {
  width: 100%;
  height: 50%;
}

.card-btn view {
   width: 100%; 
  height: 50rpx;
  line-height: 50rpx;
  padding: 2rpx 16rpx;
  background-color: #fff;
  text-align: center;
  font-size: 24rpx;
  color: #fa6b6f;
  border-radius: 8rpx;
}
