.popup {
  position: fixed;
  z-index: 100;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  max-width: 200rpx;
  height: 50rpx;
  padding: 10rpx 50rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  font-size: 24rpx;
  animation: show-popup ease 3s forwards;
}

@keyframes show-popup {
  from {
    opacity: 0;
  }

  25% {
    opacity: 1;
  }

  75% {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}
