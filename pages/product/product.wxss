/* 导购欢迎页面样式  */

.guide-modal .guide-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  transition: background-color 0.3s;
  animation: fadeIn ease 0.3s forwards;
}

.guide-modal .guide-modal-content {
  position: absolute;
  z-index: 5000;
  width: 80%;
  padding: 80rpx 50rpx 0;
  top: 150rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: inherit;
  text-align: center;
  overflow: hidden;
}

button.form_button {
  position: static;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  line-height: inherit;
  padding: 0;
  margin: 0;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  background-color: transparent;
  font-size: 0rpx;
  color: transparent;
}

button.form_button::after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}

.guide-modal button.form_button text {
  color: #fff;
}

.guide-modal .form_button>image {
  position: absolute;
  top: 2rpx;
  right: 0rpx;
  width: 50rpx;
  height: 50rpx;
  transform: rotate(45deg);
  background-color: #fff;
  border-radius: 50%;
  border: 1px solid #fff;
}

.guide-content {
  width: 600rpx;
  height: 660rpx;
  border-radius: 3px;
  font-size: 0;
}

.guide-content>image, .guide-center {
  width: 100%;
  background-color: #fff;
  height: 330rpx;
}

.guide-content>image {
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.guide-center {
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
}

.guide-center {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.guide-user, .guide-employee {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.guide-employee text {
