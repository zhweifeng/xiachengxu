/*客服按钮样式  */

.contact-wrapper {
  position: fixed;
  right: -50rpx;
  bottom: 250rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 100;
  transition: right 0.2s ease-in;
  animation: popup-contact 0.8s ease-out 4 alternate;
}

@keyframes popup-contact {
  from {
    transform: translateX(0);
  }

  to {
    transform: translateX(-50rpx);
  }
}

.contact-tip {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx 30rpx;
  margin-right: -100rpx;
  background: #a2e563;
  border-radius: 10rpx;
  color: #212121;
  font-size: 28rpx;
  opacity: 0;
  transition: all 0.5s ease-in-out;
}

.contact-tip-active {
  opacity: 1;
  margin-right: 50rpx;
}

.contact-tip:after {
  content: '';
  position: absolute;
  top: 42rpx;
  right: -8rpx;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg);
  background-color: #a2e563;
}

.contact {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  line-height: inherit;
  padding: 0;
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.4);
  background-color: #fff;
}

.contact-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.praise-animate {
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  opacity: 0;
  transition: all 0.5s ease-out;
}

.praise-animate image {
  width: 100%;
  height: 100%;
}

.praise-animate image:last-child {
  position: absolute;
  left: 0;
}

.praise-animate-show {
  top: -100rpx;
  opacity: 1;
}

.hide-praise-animate {
  opacity: 0;
}

button.contact:after {
  border: none;
}

.contact image {
  width: 50rpx;
  height: 50rpx;
  font-size: 0;
}

.contact text {
  display: inline-block;
  margin: 0;
  padding: 0;
  font-size: 22rpx;
  color: #26ab28;
}

