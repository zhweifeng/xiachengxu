.tab-content {
  background-color: #eee;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.navbar-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #999;
}

.navbar-text {
  display: inline-block;
  min-width: 40px;
  padding: 8px 5px;
  margin: auto;
  border-bottom: 2px solid transparent;
  color: #666;
}

.navbar-text.active {
  border-color: #212121;
  color: #212121;
  font-weight: bold;
}
