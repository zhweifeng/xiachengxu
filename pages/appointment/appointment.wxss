@import "../tpls/foot/foot-item-tpl.wxss";
@import '../common/css/weui.wxss';

.appointment {
  height: 1300rpx;
  background-color: #fff;
}

.product-info {
  background-color: #fff;
}

.less {
  overflow: hidden;
}

.show-more {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 30rpx 0;
}

.show-more .product-count {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font: 28rpx/normal PingFang-SC-Medium;
  color: #999;
}

.show-more image {
  width: 50rpx;
  height: 50rpx;
}

.order-info-address {
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  padding: 10rpx 30rpx;
  margin-top: 20rpx;
  border-top: 2rpx solid #d9d9d9;
  border-bottom: 10rpx solid #d9d9d9;
}

.order-info-address text {
  font-family: PingFang-SC-Regular;
  font-size: 24rpx;
  color: #28292f;
}

.appointment-user {
  padding: 0 30rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
}

.appointment-user .appoint-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
}

.appointment-user .appoint-item:last-child {
  border-bottom: none;
}

.appointment-user .appoint-item label {
  float: left;
  color: #999;
  flex: 0 0 25%;
}

.appointment-user .appoint-item input, .appointment-user .appoint-item picker {
  flex: 1;
  height: 100%;
  align-items: center;
}

.appointment-user .appoint-item .picker {
  padding: 30rpx 0;
}

.appointment-user .appoint-item:last-child {
  border-bottom: none;
}

.complete-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 50rpx 30rpx;
}

.complete-btn button {
  width: 100%;
  height: 100rpx;
  background-color: #212121;
  border-radius: 4rpx;
  color: #fff;
  font: 24rpx/100rpx PingFang-SC-Regular;
}

.save-btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
}

.save-btn button {
  width: 200rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  border-radius: 4rpx;
}

.save-btn button:first-child {
  margin-right: 30rpx;
  border: 2rpx solid #212121;
  background-color: #fff;
}

.save-btn button:last-child {
  background-color: #212121;
  color: #fff;
}

.button-active {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

button.form_button {
  position: static;
  display: flex;
  flex: 1;
  padding: 0;
  margin: 0;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  background-color: transparent;
  font-size: 0rpx;
  color: transparent;
  text-align: left;
}

button.form_button:after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}

.phone_form {
  display: inline-block;
  width: 100%;
}

/*修改foot-item-tpl 的样式  */

.item {
  padding: 0;
}
