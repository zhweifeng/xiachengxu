/* pages/shopping/shopping.wxss */

.header {
  width: 100%;
  height: 120rpx;
  display: flex;
}

.header button {
  width: 35%;
  height: 85rpx;
  margin-top: 14px;
  font-size: 16px;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-top: 1px solid #ccc;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #777;
}

.on {
  color: skyblue;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin-bottom: 80rpx;
}

.background {
  width: 100%;
  height: 15px;
  background: #eee;
}

.main {
  height: 100%;
  flex: 1;
  overflow-y: scroll;
}

.shop {
  width: 100%;
  height: 425rpx;
  border-top: 2px solid #eee;
  border-bottom: 2px solid #eee;
}

.essay image {
  width: 200rpx;
  height: 200rpx;
  padding: 25px 25px 25px 25px;
}

.text {
  height: 210rpx;
  display: flex;
  flex-direction: column;
  margin-top: 29rpx;
}

.skirt {
  font-size: 18px;
  margin-top: 10rpx;
}

.money {
  margin-top: 20rpx;
  margin-left: -7rpx;
  font-size: 20px;
  color: red;
  font-weight: bold;
}

.footer {
  width: 100%;
  height: 80rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
}

.footer button {
  flex: 1;
  width: 33.3%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature {
  width: 100%;
  height: 125rpx;
  border: 1px solid gainsboro;
  display: flex;
}

.preview {
  height: 100%;
  width: 40%;
  display: flex;
  flex-direction: column;
}

.preview text {
  font-size: 25rpx;
  color: #333;
  text-align: center;
}

.preview image {
  height: 35rpx;
  width: 35rpx;
  margin: 0 auto;
  margin-top: 25rpx;
}

.essay {
  width: 100%;
  height: 300rpx;
  display: flex;
}

.knockdown {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #777;
}

.increase {
  margin-left: 50rpx;
  font-size: 30rpx;
  color: #777;
}

.sales {
  font-size: 30rpx;
  color: #777;
}

.repertory {
  font-size: 30rpx;
  color: #777;
}

.gather {
  margin-top: 13rpx;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  height: 210px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}
/*折扣样式*/
.discount {
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: 2rpx solid #f5f5f5;
  padding-left:30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.discount text {
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 33rpx;
  color: gray;
}
.discount switch {
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
}

/*推荐样式*/
.recommend {
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: 2rpx solid #f5f5f5;
  padding-left:30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.recommend text {
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 33rpx;
  color: gray;
}
.recommend switch {
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
}
.bag {
  height: 80rpx;
  width: 100%;
  background: gainsboro;
  display: flex;
}

.bag view {
  line-height: 70rpx;
}

.bag button {
  margin-top: 20rpx;
  margin-left: 472rpx;
}

.preserve {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
}

