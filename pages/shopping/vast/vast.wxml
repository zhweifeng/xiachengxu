<!--pages/shopping/vast/vast.wxml-->
 <view class='main'>
        <view class='shop' wx:for='{{list}}' wx:key='{{key}}' bindtap='CommodityDetails'>
          <image src='{{item.image}}'></image>
          <view class='text'>
            <text class='skirt'>{{item.title}}</text>
            <text class='number'>{{item.message}}{{item.number}}</text>
            <text class='money'>￥{{item.money}}</text>
          </view>
        </view>
  </view>
  <view class='footer'>
      <button>下架</button>
      <button>添加至</button>
  </view> 