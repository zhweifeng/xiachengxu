/* pages/shopping/vast/vast.wxss */
.main{
  flex:1;
  overflow-y:scroll;
}
.shop{
  width: 100%;
  height: 280rpx;
  display: flex;
  border-top: 2px solid #eee;
  border-bottom: 2px solid #eee;
}
.shop image{
  width: 200rpx;
  height: 200rpx;
  padding: 7px 10px 10px 7px;
}
.text{
  display: flex;
  flex-direction:column;
}
.skirt{
  font-size: 18px;
}
.number{
  font-size: 12px;
  color: #ccc;
  margin-top: 5px;
}
.money{
  margin-top: 50rpx;
  margin-left: 20rpx;
  font-size: 20px;
  color: red;
  font-weight: bold;
}
.footer{
  width: 100%;
  height: 80rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
}
.footer button{
  flex:1;
  width: 33.3%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items:center;
}