.detail-wrapper {
  padding: 0 30rpx 120rpx 30rpx;
}

.detail-top {
  display: flex;
  align-items: flex-start;
  padding: 30rpx 0 0;
}

.detail-top-left {
  width: 84rpx;
  height: 84rpx;
  margin-right: 24rpx;
}

.detail-top-left image {
  width: 100%;
  height: 100%;
}

.detail-top-right {
  flex: 1;
}

.detail-top-right .store-name {
  font: 30rpx/normal PingFangSC-Semibold;
  color: #288dff;
}

.products-desc {
  font: 32rpx/normal PingFangSC-Regular;
  color: #333;
  text-align: justify;
}

.products-imgs {
  margin-bottom: 20rpx;
}

.products-image {
  width: 100%;
  height: 800rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.products-image image {
  width: 100%;
  height: auto;
}

.info, .info-left, .info-right {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.info-right image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.info text {
  font: 28rpx/normal PingFang-SC-Regular;
  color: #919191;
}

.info .view-num {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.info .view-num image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.praise-list {
  position: relative;
  padding: 20rpx;
  margin-top: 30rpx;
  background-color: #f6f6f6;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
}

.praise-list:after {
  position: absolute;
  content: '';
  right: 10rpx;
  top: -26rpx;
  width: 0;
  height: 0;
  border: 14rpx solid transparent;
  border-color: transparent transparent #f6f6f6 transparent;
}

.praise-list image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.options {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.2);
}

.options .option {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  margin: 0 20rpx;
}

.option image {
  width: 60rpx;
  height: 60rpx;
}

.option text {
  font-size: 24rpx;
}

.appoint-btn {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(90deg, #4aacff, #0093ff);
  color: #fff;
}

button.form_button {
  position: static;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  line-height: inherit;
  padding: 0;
  margin: 0;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  background-color: transparent;
  font-size: 0rpx;
  color: transparent;
}

button.form_button::after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}
