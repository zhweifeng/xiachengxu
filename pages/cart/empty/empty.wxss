.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background-color: #eee;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
}

.empty .tip-info {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #919191;
}

.empty view text:last-child {
  color: #f10215;
  text-decoration: underline;
}
