@import '../tpls/activity/activity.wxss';
@import '../tpls/products/products-tpl.wxss';
@import '../tpls/redpack-info/redpack-info.wxss';
@import '../tpls/tip-info/tip.wxss';

page {
  width: 100%;
}

.redpack {
  width: 100%;
  height: 100%;
  background-color: #1e83e8;
}

.redpack>image {
  width: 100%;
  height: 600rpx;
}

.redpack-top {
  background: linear-gradient(180deg, #28caea, #1e83e8);
}

.redpack-top>image {
  width: 100%;
}

.content {
  /* position: relative;
  top: -50rpx; */
  margin: 0 30rpx;
  padding: 60rpx 40rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
}

.content .user-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.user-list .user-list-item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
}

.user-list image, .user-list .empty {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #666;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
}

.user-list-item .own {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 50rpx;
  height: 20rpx;
  line-height: 20rpx;
  padding: 5rpx 0;
  font-size: 18rpx;
  text-align: center;
  color: #fff;
  background-color: #f7ac29;
  border-radius: 20rpx;
}

.user-list .empty {
  border-color: #ddd;
  color: #ddd;
}

