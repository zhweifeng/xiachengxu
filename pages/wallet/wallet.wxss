@import './empty/empty.wxss';
@import '../tpls/redpack/redpack.wxss';

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.navbar-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #999;
  margin-bottom: -1px;
}

.navbar-text {
  display: block;
  width: 50%;
  padding: 8px 5px;
  margin: auto;
  border-bottom: 2px solid transparent;
  color: #666;
}

.navbar-text.active {
  border-color: #212121;
  color: #212121;
  font-weight: bold;
}

.card-wrapper {
  padding: 30rpx 30rpx 0;
  background-color: #ecedee;
}

.qrcode-cover, .qrcode-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background-color: rgba(0, 0, 0, 0.8);
}

.qrcode-wrapper {
  margin: 100rpx 0 0;
  padding: 0 30rpx;
  background-color: transparent;
}

.qrcode-wrapper .logo {
  position: relative;
  z-index: 99;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  text-align: center;
}

.qrcode-wrapper .logo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.qrcode-content {
  position: relative;
  top: -100rpx;
  padding: 200rpx 30rpx 0;
  height: 60%;
  background-color: #fff;
  border-radius: 10rpx;
}

.qrcode-content image:first-child {
  width: 100%;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.qrcode-content image:last-child {
  width: 100%;
  height: 300rpx;
}
