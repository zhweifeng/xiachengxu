@import '../../common/css/weui.wxss';

page {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.weui-uploader__input-box {
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx auto;
}

.avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.avatar .tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 80rpx;
  text-align: center;
}

.avatar .tip text {
  font-size: 28rpx;
  color: #d9d9d9;
}

.save-btn {
  width: 50%;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0 50rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.weui-input {
  height: 100rpx;
  line-height: 100rpx;
}

.get-phone {
  position: static;
  display: inline;
  padding: 0;
  margin: 0;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  background-color: transparent;
  text-align: left;
  font-size: 28rpx;
}

.get-phone:after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}
