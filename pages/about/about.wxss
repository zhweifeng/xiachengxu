@import '../tpls/page-foot/index.wxss';

.about {
  height: 1300rpx;
  font-size: 32rpx;
  background-color: #f9f9f9;
}

.store-info {
  padding: 30rpx;
}

.store-info label {
  font-size: 28rpx;
  color: #999;
}

.address, .telephone {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.address text, .telephone text {
  font-size: 36rpx;
  color: #333;
}

.address image, .telephone image {
  width: 45rpx;
  height: 45rpx;
  padding: 0 30rpx;
  border-left: 1px solid #999;
}
