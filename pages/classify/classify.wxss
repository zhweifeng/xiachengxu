/* 列表单个商品样式 */
@import '../tpls/products/products-tpls-modal.wxss';

.classifyContainer{
  min-height:100%;
  font-family:PingFang-SC-Medium;
  background-color:#eeeeee;
  display: flex;
  flex-direction:column;
}
/*---------nav--------*/
.nav{
  overflow-x: scroll;
  background: #232428;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  flex-wrap:nowrap;
  height: 70rpx;
  position:fixed;
  top:0;
  width: 100%;
}
.nav .item{
  display: inline-block;
  color:#fff;
  padding:0 12rpx;
  font-size:26rpx;
  text-align:left;
  white-space:nowrap;
  border-radius: 10rpx;
  transition:all 1s;
  -moz-transition:all 1s; /* Firefox 4 */
  -webkit-transition:all 1s; /* Safari and Chrome */
  -o-transition:all 1s; /* Opera */
  text-align:center;
  margin-right:10rpx;

}
.nav .item:first-child{
  margin-left: 12rpx;
}
.nav .item:last-child{
  margin-right: 12rpx;
}
.nav .item text{
  line-height:70rpx;
  color: #fff;
}
/*==========选中状态=========*/
.nav .item.active{
    background: #ffcc00;
    transition:width 1s;
    -moz-transition:width 1s; /* Firefox 4 */
    -webkit-transition:width 1s; /* Safari and Chrome */
    -o-transition:width 1s; /* Opera */
}
/*-------list-------------*/
.list{
  margin-top:70rpx;
}
