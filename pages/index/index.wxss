@import '../tpls/products/products-tpl.wxss';

page {
  height: 100%;
}

swiper {
  width: 100%;
  height: 470rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

swiper-item {
  position: relative;
}

.store-container {
  padding: 0 30rpx;
}

.item-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  color: rgb(42, 42, 42);
}

.item-header>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: rgb(143, 143, 143);
  font-size: 26rpx;
}

.item-header view image {
  width: 40rpx;
  height: 40rpx;
}

.item-header view:first-child image {
  margin-right: 10rpx;
}

.item-header view:last-child image {
  transform: rotate(-90deg);
}

.item-brand {
  width: 100%;
  height: 350rpx;
}

.item-brand image {
  width: 100%;
  height: 100%;
}

.degree {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 0;
}

.degree view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.degree text {
  color: #f9984e;
  font-size: 28rpx;
}

.degree image {
  width: 40rpx;
  height: 40rpx;
  transform: rotate(-90deg);
}

button.form_button {
  position: static;
  display: inline;
  padding: 0;
  margin: 0;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  background-color: transparent;
  font-size: 0rpx;
  color: transparent;
}

button.form_button:after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}

/*海报倒计时样式  */

.portal {
  overflow: hidden;
}
